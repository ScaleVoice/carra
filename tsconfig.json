{
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/swagger": ["./swagger"],
      "@shared/*": ["./shared/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["src", "shared", "config", "tailwind.config.ts", ".next/types/**/*.ts", "src/pages", "i18n.d.ts"],
  "exclude": ["**/node_modules", "**/.next", "**/out", "**/public", "**/dist", "**/build", "**/swagger"]
}
